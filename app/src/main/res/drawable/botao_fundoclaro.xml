<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLight" />
            <corners android:radius="20.0dip" />
            <stroke android:width="2.0px" android:color="@color/colorPrimaryLight" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:radius="20.0dip" />
            <stroke android:width="2.0px" android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDisable" />
            <corners android:radius="20.0dip" />
            <stroke android:width="2.0px" android:color="@color/colorDisable" />
        </shape>
    </item>
</selector>